<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Regression Suite">
    <listeners>
        <listener class-name="com.demowebshop.listener.TestListener">
        </listener>
    </listeners>
    <test name="Chrome Test">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.demowebshop.testscripts.HomeTest">
                <methods>
                    <include name="verifyHomePageTitle"/>
                </methods>
            </class>
          <class name="com.demowebshop.testscripts.LoginTest">
                <methods>
                    <include name="verifyUserLogin"/>
                </methods>
            </class>
            <class name="com.demowebshop.testscripts.RegisterTest">
                <methods>
                    <include name="verifyUserRegistration"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Mozilla Test">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.demowebshop.testscripts.HomeTest">
                <methods>
                    <include name="verifyHomePageTitle"/>
                </methods>
            </class>
            <class name="com.demowebshop.testscripts.LoginTest">
                <methods>
                    <include name="verifyUserLogin"/>
                </methods>
            </class>
            <class name="com.demowebshop.testscripts.RegisterTest">
                <methods>
                    <include name="verifyUserRegistration"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Edge Test">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="com.demowebshop.testscripts.HomeTest">
                <methods>
                    <include name="verifyHomePageTitle"/>
                </methods>
            </class>
            <class name="com.demowebshop.testscripts.LoginTest">
                <methods>
                    <include name="verifyUserLogin"/>
                </methods>
            </class>
            <class name="com.demowebshop.testscripts.RegisterTest">
                <methods>
                    <include name="verifyUserRegistration"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>